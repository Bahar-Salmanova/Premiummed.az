@model SingleNewsViewModel

<main>
    <section id=news-main>
        <div class="container news-container">
            <img src="~/Uploads/main-news.png" alt="">

            <partial name="_breadcrumb" model="Model.BreadCrumb" />

        </div>
    </section>
    <section id=news-main-2>
        <div class="container news-main-2-container">
            <div class="row news-main-2-row">

                <div class="col-lg-12 roller-new">
                    @foreach (var item in Model.News)
                    {
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5>@item.Title</h5>
                                    <a asp-controller="news" asp-action="singlenews" asp-route-id="@item.Id" class="card-title">@item.About</a>
                                    <p class="card-text">
                                        @item.Desc
                                    </p>
                                </div>
                            </div>
                        </div>
                    }





                </div>
            </div>
        </div>
    </section>
</main>