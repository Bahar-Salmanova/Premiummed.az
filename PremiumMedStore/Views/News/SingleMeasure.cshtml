@model MeasureViewModel


<main>
    <section id="news2">
        <div class="div">
            <partial name="_breadcrumb" model="Model.BreadCrumb" />
        </div>

        <div class="container slider">
            <div class="row items owl-carousel owl-theme">

                @foreach (var item in Model.Galeries)

                {
                    <div class="col-lg-2 item"><a href=""><img src="~/Uploads/@item.Photo" alt=""></a></div>
                }



            </div>
            <div class="search">
                <i class="fas fa-search"></i>
            </div>
            <div class="row news2-row">
                <div class="col-lg-12 news2-row-col">
                    <h5>
                        @Model.Measure.Title

                    </h5>
                    <p>
                        @Model.Measure.FullDesc
                    </p>
                </div>

            </div>
        </div>
    </section>
    <section id="news2-section2">
        <div class="container karusele ">
            <div class="row news2-section2-row karusel owl-carousel owl-theme">

                @foreach (var item in Model.Measures)
                {
                    <div class="col-lg-12 ">

                        <div class="item">

                            <h5>@item.Date</h5>
                            <a asp-controller="news" asp-action="singlemeasure" asp-route-id="@item.Id">@item.Title</a>
                            <p>
                                @item.Desc
                            </p>

                        </div>

                    </div>
                }

            </div>
        </div>
    </section>
</main>