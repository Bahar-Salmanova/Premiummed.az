<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/font/fonts.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <script src="https://kit.fontawesome.com/1f2890de0d.js" crossorigin="anonymous"></script>
    <link rel="icon" href="~/uploads/Frame.svg">
    @*Yuxarida icon olsun deye*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <title>@ViewBag.Title - PremiumMed</title>
</head>

<body>

    <header>
        <section id="head-section">
            <div class="container head-start-container">
                <div class="row head-start-row">
                    <div class="col-lg-4 sosialmedia">
                        <ul>
                            <li><a href=""><i class="fab fa-facebook-square"></i></a></li>
                            <li><a href=""><i class="fab fa-instagram"></i></a></li>
                            <li><a href=""><i class="fab fa-youtube"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-6 info">
                        <span>+99451-700-76-06/78-08</span>
                        <a href="info@premiummed.az">info@premiummed.az</a>
                    </div>
                </div>
            </div>
        </section>
        <section id="navbar">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid mr-5 ml-5 head">
                    <a class="navbar-brand logo" asp-controller="home" asp-action="index"><img src="~/Uploads/Frame.svg" alt=""></a>
                    <span>
                        PremiumMed MMC <br>
                        @ViewBag.TranslatedInfo["HeaderTitle"].Value
                    </span>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                @if (ViewBag.Active == "Haqqimizda")
                                {
                                <a class="nav-link ml-4 active" asp-controller="aboutus" asp-action="index"> @ViewBag.TranslatedInfo["About"].Value </a>
                                }
                                else
                                {

                            <a class="nav-link ml-4" asp-controller="aboutus" asp-action="index"> @ViewBag.TranslatedInfo["About"].Value </a>
                                }
                            </li>
                            <li class="dropdown" id="menu1">
                                <a class="dropdown-a" data-toggle="dropdown" href="#menu1">
                                    @ViewBag.TranslatedInfo["Products"].Value
                                </a>
                                <ul class="dropdown-menu" style="column-count: 2;">
                                    @foreach (var item in ViewBag.ProductCategories)
                                    {
                                        <li>
                                            <a asp-controller="products" asp-action="index" asp-route-id="@item.Id">@item.Name</a>
                                        </li>
                                    }




                                </ul>
                            </li>
                            <li class="nav-item">
                                @if (ViewBag.Active == "Xəbərlər")
                                {
                                <a class="nav-link ml-4 active" asp-controller="news" asp-action="index"> @ViewBag.TranslatedInfo["News"].Value </a>
                                }
                                else
                                {

                            <a class="nav-link ml-4" asp-controller="news" asp-action="index">@ViewBag.TranslatedInfo["News"].Value </a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (ViewBag.Active == "Qalereya")
                                {
                                <a class="nav-link ml-4 active" asp-controller="galery" asp-action="index">@ViewBag.TranslatedInfo["Gallery"].Value </a>
                                }
                                else
                                {

                            <a class="nav-link ml-4" asp-controller="galery" asp-action="index">@ViewBag.TranslatedInfo["Gallery"].Value </a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (ViewBag.Active == "Karyera")
                                {
                                <a class="nav-link ml-4 active" asp-controller="career" asp-action="index">@ViewBag.TranslatedInfo["Career"].Value </a>
                                }
                                else
                                {

                            <a class="nav-link ml-4" asp-controller="career" asp-action="index">@ViewBag.TranslatedInfo["Career"].Value </a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (ViewBag.Active == "Əlaqə")
                                {
                                <a class="nav-link ml-4 active" asp-controller="contact" asp-action="index">@ViewBag.TranslatedInfo["Contact"].Value </a>
                                }
                                else
                                {

                            <a class="nav-link ml-4" asp-controller="contact" asp-action="index">@ViewBag.TranslatedInfo["Contact"].Value </a>
                                }
                            </li>
                            <li class="dropdown" id="menu2">
                                <a class="dropdown-a" data-toggle="dropdown" href="#menu2">
                                    AZ <i class="fas fa-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu mr-1">
                                    <li>
                                        <a href="#">EN</a>
                                    </li>
                                    <li>
                                        <a href="#">TR</a>
                                    </li>
                                    <li><a href="#">RU</a>

                                </ul>
                            </li>

                            <li class="nav-item">
                                <button><a asp-controller="products" asp-action="productcategory">@ViewBag.TranslatedInfo["Order"].Value</a></button>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
            <div class="mobile-nav-toggler">
                <i class="fas fa-bars"></i>
            </div>
            <div class="mobile-menu">
                <div class="menu-backdrop"></div>
                <div class="close-btn">
                    <i class="fas fa-times"></i>
                </div>
                <div class="menu-box">
                    <div class="logo">
                        <img src="assets/image/Logo.png" alt="">
                    </div>
                    <div class="menu">
                        <ul>
                            <li><a asp-controller="aboutus" asp-action="index"> @ViewBag.TranslatedInfo["About"].Value</a></li>
                            <li><a asp-controller="news" asp-action="index"> @ViewBag.TranslatedInfo["News"].Value</a></li>
                            <li><a asp-controller="products" asp-action="productcategory"> @ViewBag.TranslatedInfo["Products"].Value</a></li>
                            <li><a asp-controller="career" asp-action="index">@ViewBag.TranslatedInfo["Career"].Value</a></li>
                            <li><a asp-controller="galery" asp-action="index">@ViewBag.TranslatedInfo["Gallery"].Value</a></li>
                            <li><a asp-controller="contact" asp-action="index">@ViewBag.TranslatedInfo["Contact"].Value</a></li>
                        </ul>
                    </div>
                    <div class="social-links">
                        <ul>
                            <li><a href=""><i class="fab fa-facebook"></i></a></li>
                            <li><a href=""><i class="fab fa-instagram"></i></a></li>
                            <li><a href=""><i class="fab fa-youtube"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </header>

    @RenderBody()

    <footer>
        <section id="footer">
            <div class="container footer-container">
                <div class="row footer-row">
                    <div class="big-column1 col-lg-6">
                        <a asp-controller="home" asp-action="index">
                            <img src="~/Uploads/Frame.svg" alt="">
                        </a>
                        <p>@ViewBag.TranslatedInfo["FooterPremium"].Value</p>
                    </div>
                    <div class="big-column2 col-lg-6">
                        <div class="col-lg-3 page-column">
                            <h5>@ViewBag.TranslatedInfo["Pages"].Value</h5>
                            <ul class="items">
                                <li class="item"><a asp-controller="aboutus" asp-action="index"> @ViewBag.TranslatedInfo["About"].Value</a></li>
                                <li class="item"><a asp-controller="products" asp-action="productcategory"> @ViewBag.TranslatedInfo["Products"].Value</a> </li>
                                <li class="item"><a asp-controller="galery" asp-action="index">@ViewBag.TranslatedInfo["Gallery"].Value</a></li>
                                <li class="item"><a asp-controller="news" asp-action="index"> @ViewBag.TranslatedInfo["News"].Value</a></li>
                                <li class="item"><a asp-controller="news" asp-action="Measure"> @ViewBag.TranslatedInfo["Events"].Value</a></li>
                                <li class="item"><a asp-controller="career" asp-action="index">@ViewBag.TranslatedInfo["Career"].Value</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-3 contact">
                            <h5>@ViewBag.TranslatedInfo["Contact"].Value</h5>
                            <ul class="contact-lists">
                                <li class="contact-list">+99451-700-76-06/78-08</li>
                                <li class="contact-list">info@premiummed.az</li>
                                <li class="contact-list">
                                    @ViewBag.TranslatedInfo["Adres"].Value
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <hr>
            <div class="footer-copyright">
                <div class="inner-container clearfix">
                    <div class="copyright-text">
                        <p> © 2021 @ViewBag.TranslatedInfo["Reserved"].Value</p>
                    </div>
                </div>
                <ul class="sosial">
                    <li class="items"><a href=""><i class="fab fa-facebook-square"></i></a></li>
                    <li class="items"><a href=""><i class="fab fa-instagram"></i></a></li>
                    <li class="items"><a href=""><i class="fab fa-youtube"></i></a></li>
                </ul>
            </div>
            </div>

        </section>

    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/script.js"></script>
</body>

</html>