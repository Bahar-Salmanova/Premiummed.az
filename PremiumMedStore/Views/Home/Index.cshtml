@model HomeViewModel
<main>
    <section id="products">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Uploads/image 25.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Uploads/main-news.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Uploads/image 25.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
        <h3>
            @Model.Welcome.About
        </h3>
        <p>
            @Model.Welcome.Description
        </p>
        <button type="button">
            <a asp-controller="products" asp-action="index">Məhsullar</a>
        </button>
    </section>
    <section id="product-image">
        <div class="container product-image-container">

            <div class="row product-image-row1">
                <h3>Məhsullar </h3>
                <div class="col-lg-12 product-img-col">
                    <div class="owl-carousel karuselerow owl-theme">

                        @foreach (var item in Model.IndexProduct)
                        {
                            <div class="row item">
                                <div class="col-lg-6 col">
                                    <img src="~/Uploads/@item.Photo1" alt="">
                                    <h4>@item.Title</h4>
                                    <p>
                                       @item.Desc
                                    </p>
                                </div>
                                <div class="col-lg-6 col">
                                    <img src="~/Uploads/@item.Photo2" alt="">
                                    <img src="~/Uploads/@item.Photo3" alt="">
                                </div>
                                <div class="xedice"></div>
                            </div>
                        }


                       


                    </div>
                </div>

            </div>

        </div>
    </section>
    <section id="about">
        <div class="container about-container">
            <img src="~/Uploads/image.7.png" alt="">

            <div class="row about-row">
                <div class="col-lg-5 about-col5">
                    <h4>Biz Kimik?</h4>
                </div>
                <div class="col-lg-6 about-col7">
                    <h3>Haqqımızda</h3>
                    <p>
                        2016-ci ilin mart ayında, Bakı şəhərində qurulmuş PremiumMed MMC , tibbi laborator
                        avadanlıqları, reaktivlər və sərfiyyatları istehlak edən ən böyük istehsalçı şirkətlərin,
                        dünyaca məşhur brendlərin Azərbaycan bazarına ixracatçısıdır. Bu sahədə sübut olunmuş
                        texnologiyalardan və yeniliklərdən istifadə edən, yaşının az olmasına baxmayaraq, dinamik və
                        gözəl fikirlərlə dolu, gənc və müstəqil bir şirkətdir. Şirkətin ən vacib və önəmli – açar
                        fəaliyyəti , laborator məhsul və xidmətlərin realizasiyası, layihələr üzrə fəaliyyət,
                        klinikaların metodik və servis dəstəyinin mükəmməl şəkildə həyata..
                    </p>
                    <a asp-controller="aboutus" asp-action="index">Hamısını oxu ---></a>
                </div>
            </div>
        </div>
    </section>
    <section id="client-section">
        <div class="container client">
            <div class="row distribyutor">
                <div class="col-lg-8">
                    <h4>Distribyutoru olduğumuz şirkətlər</h4>
                    <p>
                        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ullam tempore corporis cupiditate
                        blanditiis quaerat non omnis suscipit consectetur ut quae. Nobis tempore distinctio sed.
                    </p>
                </div>
            </div>

        </div>
        <div class=" client-slidere">
            <div class=" slidere-clients owl-carousel owl-theme">

                @foreach (var item in Model.Clients)
                {
                    <div class=" item" style="width: 70px;"><img src="~/Uploads/@item.Logo" alt=""></div>
                }

            </div>
        </div>

    </section>
    <section id="news2-section2">
        <div class="container karusele ">
            <div class="row news2-section2-row karusel owl-carousel owl-theme">

                @foreach (var item in Model.News)
                {
                    <div class="col-lg-12 ">


                        <div class="item">

                            <h5>@item.Title</h5>
                            <a asp-controller="news" asp-action="singlenews" asp-route-id="@item.Id">@item.About</a>
                            <p>
                                @item.Desc
                            </p>

                        </div>
                    </div>

                }

            </div>
        </div>
    </section>
    <section id="ordered">

        <div class="row order-row">
            <div class="col-lg-6 order">
                <span>Məhsullarımızı əldə etmək çətin deyil!</span>
                <h4>İndi sifariş et!</h4>
                <button><a asp-controller="products" asp-action="index">Sifariş et</a> </button>
            </div>
            <div class="col-lg-6 support ">
                <span>24/7 xidmətinizdəyik!</span>
                <h4>Sualınız var?</h4>
                <button><a asp-controller="contact" asp-action="index"> Dəstək al</a></button>
            </div>
        </div>

    </section>
</main>
