
@{
    ViewData["Title"] = "CareerApply";
}

<main>
    <section id="news2">
        <div class="div">
            <partial name="_breadcrumb" />
        </div>

        <div class="container career2-container">
            <div class="row career2-row">
                <div class="col-lg-10">
                    <h3>
                        İşə Qəbul
                    </h3>
                    <p>
                        Siz əgər Premium Med’də işləmək barədə düşünürsünüzə aşağıdakı formu olduraraq öz
                        məlumatlanırınızı bizim HR bazamıza yaza bilər və ya <a href="hr@premiummed.az">hr@premiummed.az</a>  ünvanına öz CV
                        lərinizi
                        göndərə bilərsiniz.
                    </p>

                </div>

            </div>
        </div>
    </section>
    <section id="vacancy-form">
        <div class="container vacancy-form-container">
            <div class="row vacancy-form-row">
                <div class="col-lg-8 apply">
                    <form class="row g-3 needs-validation" novalidate>
                        <div class="col-md-6 name">
                            <label for="validationCustom01" class="form-label ">Ad</label>
                            <input type="name" class="form-control" id="validationCustom01" required>
                            <div class="invalid-feedback">Zəhmət olmasa adınızı düzgün qeyd edin</div>
                        </div>
                        <div class="col-md-6 surname">
                            <label for="validationCustom02" class="form-label ">Soyad</label>
                            <input type="text" class="form-control" id="validationCustom02" required>
                            <div class="invalid-feedback">Zəhmət olmasa soyadınızı düzgün qeyd edin</div>

                        </div>
                        <div class="col-md-6 email">
                            <label for="floatingInput">Email address</label>
                            <input type="email" class="form-control" id="floatingInput"
                                   placeholder="Elektron poçtunuz" required>
                            <div class="invalid-feedback">Zəhmət olmasa email ünvanınızı düzgün qeyd edin</div>
                        </div>
                        <div class="col-md-6 telephone">
                            <label for="validationCustom03" class="form-label ">Əlaqə nömrəsi</label>
                            <input type="text" class="form-control" id="validationCustom03" placeholder="+994" required>
                            <div class="invalid-feedback">Zəhmət olmasa əlaqə nömrəsini düzgün qeyd edin</div>
                        </div>
                        <div class="col-12 txt">
                            <label for="exampleFormControlTextarea1" class="form-label">Müraciət mətni</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="col-lg-12 file">
                            <input type="file" class="form-control" required>
                            <div class="invalid-feedback">Fayl yukleyin</div>

                        </div>
                        <div class="col-12 bton">
                            <button class="btn btn-primary" type="submit">Göndər</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>

</main>
