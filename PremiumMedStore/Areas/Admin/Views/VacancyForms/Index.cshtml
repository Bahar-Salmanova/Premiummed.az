@model IEnumerable<PremiumMedStore.Models.VacancyForm>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <div class="col-lg-6"><h1>Vakansiya Müraciətləri</h1></div>
            <div class="col-lg-3">
                <a asp-action="Create"><i class="fas fa-plus-square "></i></a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancy.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.File)
                <a asp-action="ShowPDF" asp-controller="VacancyForms" asp-area="Admin" asp-route-id="@item.Id" download>CV YUKLE</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Dəyişdir</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detallara bax</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>

            </td>
        </tr>
}
    </tbody>
</table>
