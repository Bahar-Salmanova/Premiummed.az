@model PremiumMedStore.Models.Welcome

@{
    ViewData["Title"] = "Create";
}

<h1 class="ml-3">Yarat</h1>

<h4 class="ml-3">Giriş</h4>
<hr />
<div class="row ml-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="About" class="control-label">Başlıq</label>
                <input asp-for="About" class="form-control" />
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mövzu</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yarat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="ml-3">
    <a asp-action="Index">Geri</a>
</div>

