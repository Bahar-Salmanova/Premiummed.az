@model PremiumMedStore.Models.Welcome

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>
<h3>Silmək istədiyinizdən əminmisiniz?</h3>

<div class="ml-3">
    <h4>Giriş</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Başlıq
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.About)
        </dd>
        <dt class="col-sm-2">
           Mövzu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri</a>
    </form>
</div>
