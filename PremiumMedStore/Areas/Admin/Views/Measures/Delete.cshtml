@model PremiumMedStore.Models.Measure

@{
    ViewData["Title"] = "Delete";
}

<h1 class="ml-3">Sil</h1>
<h3 class="ml-3">Silmək istədiyinizdən əminmisiniz?</h3>

<div class="ml-3">
    <h4>Tədbirlər</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Başlıq
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
           Tarix
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
           Qısa Mövzu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class = "col-sm-2">
            Tam Mövzu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullDesc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri</a>
    </form>
</div>
