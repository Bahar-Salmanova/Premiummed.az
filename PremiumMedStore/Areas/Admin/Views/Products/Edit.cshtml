@model PremiumMedStore.Models.Products

@{
    ViewData["Title"] = "Edit";
}

<h1>Dəyişdir</h1>

<h4>Məhsullar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Photo" />
            <input type="hidden" asp-for="Photo1" />
            <input type="hidden" asp-for="Photo2" />
            <input type="hidden" asp-for="Photo3" />
            <input type="hidden" asp-for="ProductLink" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Məhsulun Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="custom-file my-3">
                <input asp-for="Upload" class="custom-file-input">
                <label asp-for="Upload" class="custom-file-label">Şəkil Seçin</label>
                <span asp-validation-for="Upload" class="text-danger"></span>
            </div>
            <div class="custom-file my-3">
                <input asp-for="Upload1" class="custom-file-input">
                <label asp-for="Upload1" class="custom-file-label">Şəkil1 Seçin</label>
                <span asp-validation-for="Upload1" class="text-danger"></span>
            </div>
            <div class="custom-file my-3">
                <input asp-for="Upload2" class="custom-file-input">
                <label asp-for="Upload2" class="custom-file-label">Şəkil2 Seçin</label>
                <span asp-validation-for="Upload2" class="text-danger"></span>
            </div>
            <div class="custom-file my-3">
                <input asp-for="Upload3" class="custom-file-input">
                <label asp-for="Upload3" class="custom-file-label">Şəkil3 Seçin</label>
                <span asp-validation-for="Upload3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductAbout" class="control-label">Qısa Məhsul Haqqında</label>
                <input asp-for="ProductAbout" class="form-control" />
                <span asp-validation-for="ProductAbout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullAbout" class="control-label">Tam Məhsul Haqqında</label>
                <input asp-for="FullAbout" class="form-control" />
                <span asp-validation-for="FullAbout" class="text-danger"></span>
            </div>

            <div class="custom-file my-3">
                <input asp-for="File" class="custom-file-input">
                <label asp-for="File" class="custom-file-label"></label>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryId" class="control-label">Məhsul Kateqoriyası</label>
                <select asp-for="ProductCategoryId" class="form-control">
                    @foreach (var item in ViewBag.Products)
                    {
                        if (Model.ProductCategoryId == item.Id)
                        {
                            <option selected value="@item.Id">@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda Saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-lg-2 ">
        <img class="image-preview img-fluid mt-4" src="~/uploads/@Model.Photo" />
    </div>
    <div class="col-lg-2 ">
        <img class="image-preview img-fluid mt-4" src="~/uploads/@Model.Photo1" />
    </div>
    <div class="col-lg-2 ">
        <img class="image-preview img-fluid mt-4" src="~/uploads/@Model.Photo2" />
    </div>
    <div class="col-lg-2 ">
        <img class="image-preview img-fluid mt-4" src="~/uploads/@Model.Photo3" />
    </div>
</div>

<div>
    <a asp-action="Index">Geri</a>
</div>

@section Scripts{


    <script>
        $(document).ready(function () {
            $("#Upload").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    var preview = $(".image-preview");
                    preview[0].src = e.target.result;
                    //$(".image-preview")[i].attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });
            $("#Upload1").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    var preview = $(".image-preview");
                    preview[1].src = e.target.result;
                    //$(".image-preview")[i].attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });
            $("#Upload2").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    var preview = $(".image-preview");
                    preview[2].src = e.target.result;
                    //$(".image-preview")[i].attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });
            $("#Upload3").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    var preview = $(".image-preview");
                    preview[3].src = e.target.result;
                    //$(".image-preview")[i].attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });
        });
    </script>
}


