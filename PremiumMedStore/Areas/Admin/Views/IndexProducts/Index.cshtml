@model IEnumerable<PremiumMedStore.Models.IndexProduct>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <div class="col-lg-6"><h1>Əsas Məhsullar</h1></div>
            <div class="col-lg-3">
                <a asp-action="Create"><i class="fas fa-plus-square "></i></a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                <img class="w-75" src="~/Uploads/@item.Photo1" alt="Alternate Text" />
            </td>
            <td>
                <img class="w-75" src="~/Uploads/@item.Photo2" alt="Alternate Text" />
            </td>
            <td>
                <img class="w-75" src="~/Uploads/@item.Photo3" alt="Alternate Text" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Dəyişdir</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detallar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
